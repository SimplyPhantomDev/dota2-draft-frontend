{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dota2-counter-tool",
  "version": "0.1.0",
  "identifier": "com.d2dt.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Dota 2 Drafting Tool",
        "center": true,
        "width": 1850,
        "height": 900,
        "minWidth": 1850,
        "minHeight": 900,
        "resizable": true,
        "maximized": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/datasets/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}